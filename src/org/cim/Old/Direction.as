package org.cim.old {
	
	/**
	 * Stores information about a direction given on sheet music,
	 * such as the tempo, octavate, etc.
	 */
	public class Direction {
		/**
		 * The name of the direction (such as metronome, etc.)
		 * See the MusicXML DTD for more information.
		 */
		public var name:String;
		
		/**
		 * The staff on which the direction should appear.
		 */
		public var staffNumber:int = 1;
	}
}